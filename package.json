{
  "name": "sqlite-viewer",
  "displayName": "SQLite Viewer",
  "description": "A production-ready VS Code extension for viewing SQLite databases with SQLCipher support and advanced table pagination",
  "version": "0.2.0",
  "publisher": "your-publisher-name",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sqlite-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/sqlite-viewer/issues"
  },
  "homepage": "https://github.com/your-username/sqlite-viewer#readme",
  "keywords": [
    "sqlite",
    "database",
    "viewer",
    "sql",
    "sqlcipher",
    "data",
    "query",
    "table",
    "editor"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Data Science",
    "Visualization",
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sqlite-viewer.openDatabase",
        "title": "Open SQLite Database",
        "category": "SQLite Viewer"
      },
      {
        "command": "sqlite-viewer.connectWithKey",
        "title": "Connect with SQLCipher Key",
        "category": "SQLite Viewer"
      },
      {
        "command": "sqlite-viewer.refreshDatabase",
        "title": "Refresh Database",
        "category": "SQLite Viewer"
      },
      {
        "command": "sqlite-viewer.exportData",
        "title": "Export Data",
        "category": "SQLite Viewer"
      }
    ],
    "customEditors": [
      {
        "viewType": "sqlite-viewer.databaseEditor",
        "displayName": "SQLite Database Viewer",
        "selector": [
          {
            "filenamePattern": "*.db"
          },
          {
            "filenamePattern": "*.sqlite"
          },
          {
            "filenamePattern": "*.sqlite3"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "sqlite-viewer.databaseExplorer",
          "name": "Database Explorer",
          "when": "sqlite-viewer.hasOpenDatabase",
          "icon": "$(database)"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "sqlite-viewer.openDatabase",
          "when": "resourceExtname == .db || resourceExtname == .sqlite || resourceExtname == .sqlite3",
          "group": "1_open"
        }
      ],
      "view/title": [
        {
          "command": "sqlite-viewer.refreshDatabase",
          "when": "view == sqlite-viewer.databaseExplorer",
          "group": "navigation",
          "icon": "$(refresh)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "sql.js": "^1.13.0",
    "sqlite3": "^5.1.7"
  }
}
